@model Sample.Models.AddEmployeeViewModel;

<form method="post" action="Add">
    <h1>Add Employee Details</h1>
    <div class="mb-3 mt-5">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name"asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" id="email" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="salary" asp-for="Salary">
    </div>
    <div class="mb-3">
        <label for="dob" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" id="dob" asp-for="DateOfBirth">
    </div>
    <div class="mb-3">
        <label for="dept" class="form-label">Department</label>
        <input type="text" class="form-control" id="dept" asp-for="Department">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>